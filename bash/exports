# exports

# set ls colors
export LSCOLORS='gxfxcxdxbxegedabagacad'

# set vim as default editor
export EDITOR="vim"
export CVSEDITOR="vim"
export SVN_EDITOR="vim"

# don't clear screen after leaving man page
export MANPAGER="less -X"

# make bash history better
export HISTSIZE=30000
export HISTFILESIZE=$HISTSIZE
export HISTCONTROL=ignoredups
export HISTIGNORE="&:l:ls:lt:la:exit:history"

# Tab titles in terminal apps that support them
export PROMPT_COMMAND='echo -e "\033];$HOSTNAME\007"'

# update PATH
[ -d "$HOME/bin" ] && PATH="/usr/local/sbin:$PATH:$HOME/bin";
PATH="/usr/local/sbin:$PATH"

# go workspace
#export GOPATH=$HOME/dev/go
#export PATH=$GOPATH/bin:$PATH

export PATH

# BitchX
export IRCNICK=yungjames
export IRCUSER=yungjames
#export IRC_HOST=
export IRCNAME=YungJames
export IRCSERVER=irc.freenode.net

